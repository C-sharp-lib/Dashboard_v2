@model Dash.Areas.Admin.Models.CampaignUserNotes

@{
    Layout = "_Layout";
}

<div class="container">
<div class="row mt-11 mb-11">
    <div class="col-12 col-md-6">
        <div class="card shadow-lg bg-gradient-dark">
            
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="card shadow-lg bg-gradient-dark">
            <div class="card-header bg-gradient-dark" style="display: flex; justify-content: space-between; align-items: center">
                <h3 class="text-gradient text-info ubuntu-bold">@Model.NoteTitle Details</h3>
                
            </div>
            <div class="card-body p-4">
                <h3>@Model.NoteTitle</h3>
                <p class="text-white ubuntu lead">
                    @Model.NoteContent
                </p>
                <p class="text-gradient text-success">@Model.CreatedAt.ToString("d")</p>
            </div>
            </div>
        </div>
</div>
</div>