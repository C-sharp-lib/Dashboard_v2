@model Dash.Areas.Admin.Models.CampaignUserTasks

@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row mt-7 mb-7">
        <div class="col-12 col-md-6">
            <div class="card shadow-lg bg-gradient-dark">
            
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="card shadow-lg bg-gradient-dark">
                <div class="card-header bg-gradient-dark" style="display: flex; justify-content: space-between; align-items: center">
                    <h3 class="text-gradient text-info ubuntu-bold">@Model.TaskTitle's Details</h3>
                
                </div>
                <div class="card-body p-4">
                    <h3>@Model.TaskTitle</h3>
                    <p class="text-white ubuntu lead">
                        @Html.Raw(Model.TaskDescription)
                    </p>
                    <h4 class="text-gradient text-info ubuntu-bold">Dates</h4>
                    <p class="text-gradient text-success">@Model.StartDate.ToString("d") - @Model.EndDate.ToString("d")</p>
                    <hr class="horizontal bg-info">
                    <p class="text-gradient text-success">@Model.CreatedAt.ToString("d")</p>
                </div>
            </div>
        </div>
    </div>
</div>