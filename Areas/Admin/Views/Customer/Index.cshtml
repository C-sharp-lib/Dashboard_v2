@using Dash.Areas.Admin.Models
@model IEnumerable<Dash.Areas.Admin.Models.Customers>
@{
    Layout = "_Layout";
}

<div class="row mt-11 mb-11 p-7">
    <div class="col-12 col-md-12">
        <div class="card shadow-lg bg-gradient-dark">
            <div class="card-header bg-gradient-dark" style="display: flex; justify-content: space-between; align-items: center">
                <h1 class="violet-text ubuntu-bold">All Customers</h1>
                <div class="btn-group m-3">
                    <a class="btn bg-gradient-dark violet-text shadow-md ubuntu-bold btn-tooltip" asp-action="Index" asp-controller="Dashboard" asp-area="Admin" title="Go back to the admin dashboard"><i class="fa-solid fa-backward-step"></i></a>
                    <a class="btn bg-gradient-dark green-text shadow-md ubuntu-bold btn-tooltip" asp-area="Admin" asp-action="AddCustomerPage" asp-controller="Customer" title="Add a new customer"><i class="fa-solid fa-plus"></i></a>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    @foreach (Customers customer in Model)
                    {
                        <div class="col-12 col-md-3">
                            <a asp-action="CustomerDetails" asp-controller="Customer" asp-route-id="@customer?.CustomerId" asp-area="Admin">
                                <div class="card card-background shadow-xl">
                                    <div class="full-background" style="background-image: url('@Url.Content($"~/assets/img/curved-images/curved11.jpg")')"></div>
                                    <div class="card-body pt-12">
                                        <h4 class="text-white ubuntu-bold text-center">@customer?.FirstName @customer?.LastName</h4>
                                        <h6 class="text-white ubuntu-bold text-center"><span class="text-gradient text-info">Email: </span>@customer?.Email | <span class="text-gradient text-info">Username: </span>@customer?.UserName</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                    
                    }
                </div>
            </div>
        </div>
    </div>
</div>