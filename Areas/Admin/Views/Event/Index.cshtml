@model IEnumerable<Dash.Areas.Admin.Models.Event>
@{
    Layout = "_Layout";
}

<div class="row mt-11 mb-11 p-7">
    <div class="col-12 col-md-12">
        <div class="card shadow-lg bg-gradient-dark">
            <div class="card-header bg-gradient-dark">
                <h1 class="text-gradient text-warning ubuntu-bold">All Events</h1>
            </div>
            <div class="card-body p-3">
                <table class="table table-striped table-borderless table-hover table-responsive table-responsive-sm table-responsive-md table-responsive-lg" id="events-table-container">
                    <thead>
                    <tr class="text-center">
                        <th class="text-gradient text-info ubuntu-bold">ID</th>
                        <th class="text-gradient text-info ubuntu-bold">Title</th>
                        <th class="text-gradient text-info ubuntu-bold">Description</th>
                        <th class="text-gradient text-info ubuntu-bold">Background Color</th>
                        <th class="text-gradient text-info ubuntu-bold">Text Color</th>
                        <th class="text-gradient text-info ubuntu-bold">Time Frame</th>
                        <th class="text-gradient text-info ubuntu-bold">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var events in Model)
                    {
                        <tr class="text-center text-sm">
                            <td class="text-white ubuntu">@events.EventId</td>
                            <td class="text-white ubuntu">@events.TruncateWords(events.Title, 6)</td>
                            <td class="text-white ubuntu">@events.TruncateWords(events.Description, 6)</td>
                            <td class="text-white ubuntu"><input type="color" disabled="disabled" value="@events.Color" class="form-control color-background bg-gradient-dark"/></td>
                            <td class="text-white ubuntu"><input type="color" disabled="disabled" value="@events.ForegroundColor" class="form-control color-background bg-gradient-dark"/></td>
                            <td class="text-white ubuntu">@events.StartDate.ToString("d") - @events.EndDate.ToString("d")</td>
                            <td>
                                @Html.ActionLink("", "EventDetails", "Event", new { id = events.EventId, area = "Admin" }, new { @class = "m-3 btn-tooltip fa-solid fa-list text-gradient text-info text-sm", title = $"View {events.Title}" })
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>