@model IEnumerable<Dash.Areas.Admin.Models.Jobs>

@{
    Layout = "_Layout";
}
<div class="row mt-11 mb-11 p-7">
    <div class="col-12 col-md-12">
        <div class="card shadow-lg bg-gradient-dark">
            <div class="card-header bg-gradient-dark">
                <h1 class="text-gradient text-warning ubuntu-bold">All Jobs</h1>
            </div>
            <div class="card-body p-3">
                <table class="table table-full-width table-borderless table-hover table-responsive table-responsive-sm table-responsive-md table-responsive-lg">
                    <thead>
                    <tr class="text-center">
                        <th class="text-gradient text-info ubuntu-bold">ID</th>
                        <th class="text-gradient text-info ubuntu-bold">User</th>
                        <th class="text-gradient text-info ubuntu-bold">Title</th>
                        <th class="text-gradient text-info ubuntu-bold">Description</th>
                        <th class="text-gradient text-info ubuntu-bold">Priority</th>
                        <th class="text-gradient text-info ubuntu-bold">Status</th>
                        <th class="text-gradient text-info ubuntu-bold">Time Frame</th>
                        <th class="text-gradient text-info ubuntu-bold">Created</th>
                        <th class="text-gradient text-info ubuntu-bold">Updated</th>
                        <th class="text-gradient text-info ubuntu-bold">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var jobs in Model)
                    {
                        <tr class="text-center text-sm">
                            <td class="text-white ubuntu">@jobs.JobId</td>
                            <td class="text-white ubuntu">
                                <div class="d-flex px-2 py-1">
                                    <div>
                                        <img src="@Url.Content($"~/Uploads/AppUsers/{jobs.User.ImageUrl}")" class="avatar avatar-sm me-3" alt="Picture of @jobs.User.UserName">
                                    </div>
                                    <div class="d-flex flex-column justify-content-center">
                                        <p class="text-white ubuntu text-xs mb-0">@jobs.User.FirstName @jobs.User.LastName</p>
                                        <p class="text-white ubuntu text-xs mb-0">@jobs.User.UserName</p>
                                    </div>
                                </div>
                            </td>
                            <td class="text-white ubuntu">@jobs.TruncateWords(jobs.Title, 3)</td>
                            <td class="text-white ubuntu">@jobs.TruncateWords(jobs.Description, 3)</td>
                            <td class="text-white ubuntu">@jobs.Priority</td>
                            <td class="text-white ubuntu">@jobs.Status</td>
                            <td class="text-white ubuntu">@jobs.StartDate.ToString("d") - @jobs.EndDate.ToString("d")</td>
                            <td class="text-white ubuntu">@jobs.CreatedAt.ToString("d")</td>
                            <td class="text-white ubuntu">@jobs.UpdatedAt.ToString("d")</td>
                            
                            <td class="btn-group">
                                <a asp-action="JobDetails" asp-controller="Job" asp-area="Admin" asp-route-id="@jobs.JobId" title="View ID: @jobs.JobId" class="btn bg-gradient-dark btn-sm text-info shadow-md ubuntu-bold btn-tooltip"><i class="fa-solid fa-list text-gradient text-info text-sm"></i></a>
                                <a asp-action="UpdateJobPage" asp-controller="Job" asp-area="Admin" asp-route-id="@jobs.JobId" title="Update ID: @jobs.JobId" class="btn bg-gradient-dark btn-sm text-warning shadow-md ubuntu-bold btn-tooltip"><i class="fa-solid fa-pen-to-square text-gradient text-warning text-sm"></i></a>
                                <form asp-action="DeleteJob" asp-controller="Job" asp-route-id="@jobs.JobId" asp-area="Admin" method="post">
                                    <button type="submit" class="btn bg-gradient-dark btn-sm text-danger shadow-md ubuntu-bold btn-tooltip" title="Delete ID: @jobs.JobId"><i class="fa-solid fa-trash text-gradient text-danger text-sm"></i></button>
                                </form>
                            </td>
                        </tr>
                        }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
