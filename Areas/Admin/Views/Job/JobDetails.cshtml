@model Dash.Areas.Admin.Models.UserJobs
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row mt-11 mb-11">
        <div class="col-12 col-md-6">
            <div class="card shadow-lg bg-gradient-dark">
                <div class="card-body p-3 ubuntu text-white">
                    <h3 class="violet-text ubuntu-bold">@Model.Job.Title</h3>
                    @Html.Raw(Model.Job.Description)
                    <br>
                    <hr class="horizontal violet">
                    <br>
                    <div class="text-white ubuntu">
                        <p class="violet-text ubuntu-bold lead">Category</p>
                        @Model.Job.Category
                    </div>
                    <div class="text-white ubuntu">
                        <p class="violet-text ubuntu-bold lead">Type</p>
                        @Model.Job.Type
                    </div>
                    <div class="text-white ubuntu">
                        <p class="violet-text ubuntu-bold lead">Status | Priority</p>
                        <p class="violet-text ubuntu-bold lead">Status: </p> <span>@Model.Job.Status</span>
                        <p class="violet-text ubuntu-bold lead">Priority: </p> <span>@Model.Job.Priority</span>
                    </div>
                    <div class="text-white ubuntu">
                        <p class="violet-text ubuntu-bold lead">Estimated Cost</p>
                        @Model.Job.EstimatedCost
                    </div>
                    <div class="text-white ubuntu">
                        <p class="violet-text ubuntu-bold lead">User Assign To</p>
                        @Model.User.UserName
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="card shadow-lg bg-gradient-dark">
                <div class="card-header bg-gradient-dark" style="display: flex; justify-content: space-between; align-items: center">
                    <h4 class="violet-text ubuntu-bold">Job Details</h4>
                    <div class="btn-group m-3">
                        <a class="btn bg-gradient-dark text-info shadow-md ubuntu-bold btn-tooltip" asp-action="Index" asp-controller="Job" asp-area="Admin" title="Go back to the event list"><i class="fa-solid fa-backward-step"></i></a>
                        <a class="btn bg-gradient-dark text-warning shadow-md ubuntu-bold btn-tooltip" asp-action="UpdateJobPage" asp-controller="Job" asp-area="Admin" asp-route-id="@Model?.UserJobId" title="Edit Job TITLE: @Model?.Job.Title"><i class="fa-solid fa-pen-to-square"></i></a>
                        <form asp-action="DeleteJob" asp-controller="Job" asp-area="Admin" asp-route-id="@Model?.UserJobId" method="post">
                            <button type="submit" class="btn bg-gradient-dark text-danger shadow-md ubuntu-bold btn-tooltip" title="Delete @Model?.Job.Title"><i class="fa-solid fa-trash"></i></button>
                        </form>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="text-white ubuntu">
                        <p class="violet-text ubuntu-bold lead">Title</p>
                        @Model.Job.Title
                    </div>
                    <div class="text-white ubuntu">
                        <p class="violet-text ubuntu-bold lead">Time Frame</p>
                        @Model.Job.StartDate.ToString("d") - @Model.Job.EndDate.ToString("d")
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>