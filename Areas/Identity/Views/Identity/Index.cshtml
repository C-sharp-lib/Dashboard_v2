@using Dash.Areas.Identity.Models
@model IEnumerable<Dash.Areas.Identity.Models.AppUser>
@{
    Layout = "_Layout";
}

<div class="row mt-11 mb-11 p-7">
    <div class="col-12 col-md-12">
        <div class="card shadow-lg bg-gradient-dark">
            <div class="card-header bg-gradient-dark" style="display: flex; justify-content: space-between; align-items: center">
                <h1 class="text-gradient text-warning ubuntu-bold">All App Users</h1>
                <div class="btn-group m-3">
                    <a class="btn bg-gradient-dark text-info shadow-md ubuntu-bold btn-tooltip" asp-action="Index" asp-controller="Dashboard" asp-area="Admin" title="Go back to the admin dashboard"><i class="fa-solid fa-backward-step"></i></a>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="row">
                @foreach (AppUser user in Model)
                {
                    <div class="col-12 col-md-3">
                        <a asp-action="UserDetails" asp-controller="Identity" asp-route-id="@user?.Id" asp-area="Identity">
                        <div class="card card-background shadow-xl">
                            <div class="full-background" style="background-image: url('@Url.Content($"~/Uploads/AppUsers/{user?.ImageUrl}")')"></div>
                            <div class="card-body pt-12">
                                <h4 class="text-white ubuntu-bold">@user?.FirstName @user?.MiddleName @user?.LastName</h4>
                            </div>
                        </div>
                        </a>
                    </div>
                    
                }
                </div>
            </div>
        </div>
    </div>
</div>


