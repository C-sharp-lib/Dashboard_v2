@model Dash.Areas.Identity.Models.AddRoleViewModel

@{
    Layout = "_Layout";
}

    <div class="row mt-7 mb-7">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="card shadow-lg bg-gradient-dark">
                <div class="card-header bg-gradient-dark" style="display: flex; justify-content: space-between; align-items: center">
                    <h1 class="text-gradient text-warning ubuntu-bold">Roles</h1>
                    <div class="btn-group text-sm">
                        <a class="btn bg-gradient-dark violet-text shadow-md ubuntu-bold btn-tooltip" asp-action="Index"
                           asp-controller="Role" asp-area="Admin" title="Go back to role list"><i
                                class="fa-solid fa-backward-step"></i></a>
                        <a class="btn bg-gradient-dark green-text shadow-md ubuntu-bold btn-tooltip" asp-action="Index"
                           asp-controller="Dashboard" asp-area="Admin" title="Go back to admin dashboard"><i class="fa-solid fa-table-columns"></i></a>
                    </div>
                </div>
                <div class="card-body p-3">
                    <form asp-action="AddARole" asp-controller="Role" asp-area="Identity" method="post">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label ubuntu-bold text-gradient text-info">Role Name</label>
                            <input asp-for="Name" class="form-control form-control-lg color-background bg-gradient-dark text-white ubuntu-bold" id="Name">
                        </div>
                        <div class="mt-3 mb-3">
                            <button type="submit" class="btn violet btn-lg w-100 ubuntu-bold text-white">Add Role</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

