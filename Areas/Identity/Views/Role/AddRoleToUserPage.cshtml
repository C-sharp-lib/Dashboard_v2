@model Dash.Areas.Identity.Models.UserRolesViewModel
@{
    Layout = "_Layout";
    var roles = ViewBag.roles;
    var user = ViewBag.theUser;
}


    <div class="row mt-11 mb-11">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="card shadow-lg bg-gradient-dark">
                <div class="card-header bg-gradient-dark" style="display: flex; justify-content: space-between; align-items: center">
                    <h1 class="text-gradient text-warning ubuntu-bold">Add Role To User</h1>
                    <div class="btn-group text-sm">
                        <a class="btn bg-gradient-dark violet-text shadow-md ubuntu-bold btn-tooltip" asp-action="Index"
                           asp-controller="Role" asp-area="Admin" title="Go back to role list"><i
                                class="fa-solid fa-backward-step"></i></a>
                        <a class="btn bg-gradient-dark green-text shadow-md ubuntu-bold btn-tooltip" asp-action="Index"
                           asp-controller="Dashboard" asp-area="Admin" title="Go back to admin dashboard"><i class="fa-solid fa-table-columns"></i></a>
                    </div>
                </div>
                <div class="card-body p-3">
                    <table class="table table-hover table-striped table-borderless">
                    <thead>
                    <tr class="text-center violet-text ubuntu-bold">
                        <th>ID</th>
                        <th>Username</th>
                        <th>AssignedRole</th>
                    </tr>
                    </thead>
                    <tbody>
                    
                        <tr class="text-center text-white ubuntu-bold">
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>
                                <form asp-controller="Role" asp-action="AssignRole" asp-area="Identity" method="post">
                                    <input type="hidden" asp-for="UserId" value="@user.Id"/>
                                    <select asp-for="RoleId" class="form-select-lg form-control form-control-lg bg-gradient-dark text-white ubuntu-bold bg-dark">
                                        @if (user?.UserRoles != null)
                                        {
                                            foreach (dynamic role in roles)
                                            {
                                                <option value="@role?.Id">@role?.Name</option>
                                            }
                                        }
                                    </select>
                                    <div class="mt-3 mb-3">
                                        <button type="submit" class="btn violet btn-lg w-100 ubuntu-bold text-white">Add Role To User</button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

