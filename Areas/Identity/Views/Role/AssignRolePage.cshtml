@using Dash.Areas.Identity.Models
@model List<Dash.Areas.Identity.Models.RoleAssignViewModel>
@{
    Layout = "_Layout";
    var user = ViewBag.theUser;
}

<div class="container mt-11 mb-11">
    <form method="post" asp-action="AssignRole" asp-controller="Role" asp-area="Identity" asp-route-id="@user.Id">
        <h2>Add Role</h2>
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].RoleID">
                <input type="hidden" asp-for="@Model[i].RoleName">
                <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input">
                <label class="form-check-label text-white ubuntu-bold" for="@Model[i].RoleExist">@Model[i].RoleName</label>
            </div>
        }
        <button class="btn btn-success" type="submit">Add User To Role</button>
    </form>
</div>